set(CMAKE_CXX_FLAGS -std=c++11)

add_definitions( -Wall -O3 -g -DWSCPP_VERSION=${WSCPP_VERSION} -DWSCPP_VERSION_STR=${WSCPP_VERSION_CSTR} )
